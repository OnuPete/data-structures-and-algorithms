{
  "rules": {
    "quotes": [2, "single"],
    "semi": 2,
    "curly": 2,
    "camelcase": 0,
    "no-unused-vars": 2,
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "no-underscore-dangle": 2,
    "strict": 0,
    "no-multi-spaces": 2,
    "semi-spacing": 2,
    "no-shadow": 0
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "chrome": false
  }
}
